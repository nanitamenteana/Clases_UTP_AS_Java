<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginejemplo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logoandroid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_icons8_android_os" />

    <TextView
        android:id="@+id/nombreproyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-TUTOR"
        android:textColor="#989393"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/usuariohint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_user"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:onClick="login"
                android:text="Usuario" />

            <EditText
                android:id="@+id/contraseñahint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password"
                android:ems="10"
                android:hint="contraseña"
                android:inputType="textPassword"
                android:text="contraseña" />

            <Button
                android:id="@+id/botoniniciosesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:backgroundTint="#4CAF50"
                android:text="iniciar sesión"
                android:textColorHighlight="#4CAF50"
                android:textColorHint="#4CAF50" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recordar Contraseña"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>